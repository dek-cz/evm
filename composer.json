{
    "name": "dek-cz/evm",
    "description": "Nette event manager based on doctrine event manager.",
    "type": "library",
    "keywords": [ "dek-cz", "nette",  "doctrine", "events" ],
    "license": "MIT",
     "require": {
        "php": "^8.2",
        "doctrine/common": "^3.3",
        "nette/di": "^3.0",
        "nette/utils": "^4.0"
    },
    "require-dev": {
        "nette/tester": "dev-master",
        "mockery/mockery": "^1.0",
        "fzaninotto/faker": "^1.5",
        "phpstan/phpstan": "^1.8",
        "phpstan/phpstan-nette": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.3",
        "spaze/phpstan-disallowed-calls": "^2.5",
        "dek-cz/coding-standard": "^1.0.6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "dg/bypass-finals": "^1.5",
        "nette/bootstrap": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "DekApps\\Evm\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DekAppsTests\\": "tests/DekAppsTests"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
